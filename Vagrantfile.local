config.vm.networks[0][1][:lxc__bridge_name] = 'br0'

config.vm.provider :lxc do |lxc|
  lxc.customize 'cgroup.memory.limit_in_bytes', "#{vconfig['vagrant_memory']}M"
  lxc.customize 'mount.entry', "/home/vanderson/sprouto vagrant none bind,create=dir 0 0"
  lxc.customize 'mount.entry', "/home/vanderson/sprouto var/www/drupalvm none bind,create=dir 0 0"
end
